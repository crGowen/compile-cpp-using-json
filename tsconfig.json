{
    "compilerOptions":{
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "outDir": "./output/",
        "removeComments": true,
        "module": "CommonJS",
        "lib": ["esnext"],
        "target": "ES6",
    },
    "include": [
        "./src/*.ts"
    ]
}